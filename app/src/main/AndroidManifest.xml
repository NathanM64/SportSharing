<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sportsharing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_sportsharing"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_sportsharing"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ConnexionActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Inscription1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Inscription2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Inscription3Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AccueilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RechercheActiviteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RechercheResultatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreerActiviteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfilActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".AffichageActivitePostCreationActivity"
            android:screenOrientation="portrait"/>


        <!-- Déclaration de la clef d'accés à l'API de GoogleMap -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>